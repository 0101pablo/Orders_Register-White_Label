<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="@drawable/item_background">

    <TextView
        android:id="@+id/text_indicator_client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Nome do Cliente:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_client_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_indicator_client_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nome de Exemplo" />

    <TextView
        android:id="@+id/text_indicator_total_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="Valor Total:"
        app:layout_constraintEnd_toEndOf="@id/text_indicator_client_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_indicator_client_name" />

    <TextView
        android:id="@+id/text_total_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_indicator_total_value"
        app:layout_constraintTop_toTopOf="@id/text_indicator_total_value"
        tools:text="R$1.000,000" />

</androidx.constraintlayout.widget.ConstraintLayout>